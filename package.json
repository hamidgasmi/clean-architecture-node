{
  "name": "clean-architecture-node",
  "version": "1.0.0",
  "description": "This repo implements the clean architecture from Robert C. Martin (the Legendary “Uncle Bob”) Practical Software Architecture Solutions book and many coding standards/conventions.",
  "main": "app.ts",
  "files": [
    "*.js",
    "*.d.ts",
    "*.src/*.ts"
  ],
  "scripts": {
    "clean": "npx rimraf build",
    "build": "tsc --skipLibCheck -p ./tsconfig.json",
    "build:full": "npm run clean && npm install && npm build",
    "coverage": "nyc mocha --timeout 20000 -c --exit -r ts-node/register 'test/unit/**/*.spec.ts'",
    "test": "test:unit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hamidgasmi/clean-architecture-node.git"
  },
  "keywords": [
    "nodejs",
    "clean-architecture",
    "conventions"
  ],
  "author": "Hamid Gasmi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hamidgasmi/clean-architecture-node/issues"
  },
  "homepage": "https://github.com/hamidgasmi/clean-architecture-node#readme",
  "engines": {
    "node": ">=16.14.0",
    "npm": ">=8.3.1"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/chai-as-promised": "^7.1.5",
    "@types/mocha": "^9.1.0",
    "@types/sinon": "^10.0.11",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "db-migrate": "^0.11.13",
    "db-migrate-pg": "^1.2.2",
    "db-migrate-plugin-typescript": "^2.0.0",
    "eslint": "^8.12.0",
    "eslint-plugin-promise": "^6.0.0",
    "license-checker": "^25.0.1",
    "mocha": "^9.2.2",
    "mocha-param": "^2.0.1",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "sinon": "^13.0.1",
    "ts-node": "^10.7.0",
    "validate-npm-package-name": "^3.0.0"
  },
  "dependencies": {
    "awilix-koa": "^6.0.0",
    "typescript": "^4.6.2"
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "produce-source-map": true,
    "statements": 85,
    "branches": 85,
    "functions": 85,
    "lines": 85,
    "waternarks": {
      "lines": [
        84.99,
        85
      ],
      "functions": [
        84.99,
        85
      ],
      "branches": [
        84.99,
        85
      ],
      "statements": [
        84.99,
        85
      ]
    },
    "include": [
      "src"
    ],
    "exclude": [],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "html",
      "text"
    ],
    "require": [
      "ts-node/register"
    ]
  }
}
